                    <path d="M19 37H28.5" stroke="#2FF7FF"></path>
                  </svg>
                </a>
              </div>
            </div>

            <!-- Frontend Section -->
            <div
              class="text-xl sm:text-2xl lg:text-3xl border-my-green border flex-1 rounded-xl p-4 sm:p-6"
            >
              <h5 class="text-white text-center font-inter mb-4">Frontend</h5>
              <div class="flex flex-col items-center gap-3">
                <p
                  class="text-white text-center text-sm sm:text-base font-source"
                >
                  Tailwind
                </p>
                <p
                  class="text-white text-center text-sm sm:text-base font-source"
                >
                  Angular
                </p>

                <!-- GitHub Link -->
                <a
                  href="https://www.github.com/zaualpha/HumilinkUI"
                  class="mt-4 w-12 h-12 font-inter bg-transparent text-[#2FF] flex items-center justify-center cursor-pointer hover:scale-105 transform transition-all duration-200 ease-in-out active:bg-[#0b5555] active:shadow-none active:scale-95 rounded"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg
