---
import { getCollection, type CollectionEntry } from "astro:content";
import BlogLayout from "../../layouts/BlogLayout.astro";

// Define the type for our blog entries
type BlogEntry = CollectionEntry<"blog">;

// Define the props interface
interface Props {
  entry: BlogEntry;
}

// Esta funci칩n se ejecuta en build time
export async function getStaticPaths() {
  // Obtiene todos los posts del blog
  const blogEntries = await getCollection("blog");

  // Retorna un array de objetos con params y props
  return blogEntries.map((entry: BlogEntry) => ({
    params: { slug: entry.slug }, // Define el par치metro din치mico
    props: { entry }, // Props que recibir치 el componente
  }));
}

// Recibe el entry como prop
const { entry } = Astro.props as Props;
const { Content } = await entry.render();
---

<BlogLayout frontmatter={entry.data}>
  <Content />
</BlogLayout>
