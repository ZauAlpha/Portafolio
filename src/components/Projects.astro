---
import { Image } from "astro:assets";

export interface Project {
  title: string;
  description: string;
  technologies: string[];
  image?: ImageMetadata;
  demoUrl?: string;
  githubUrl?: string;
  featured?: boolean;
}

export interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div
  class="bg-black p-4 sm:p-6 lg:p-8 w-4xl mx-auto flex flex-col
   items-center gap-4 shadow-2xl"
>
  <div
    class="flex flex-col lg:flex-row items-center lg:justify-between gap-4 w-full"
  >
    <!-- Logo/Imagen -->

    <!-- Datos del proyecto -->
    <div class="text-center sm:text-left gap-y-2 flex flex-col w-full">
      <h1
        class="text-white font-bebas text-center text-2xl sm:text-3xl md:text-4xl lg:text-5xl leading-tight"
      >
        {project.title}
      </h1>
      {
        project.image && (
          <div class="flex w-full max-w-2xl mx-auto items-center justify-center">
            <Image
              src={project.image}
              alt={`Imagen del proyecto ${project.title}`}
              class="w-full h-auto max-w-lg object-contain bg-gray-200 rounded"
            />
          </div>
        )
      }
      <p
        class="font-inter max-w-xl text-base text-neutral-50 mt-1 mx-auto text-center sm:text-left"
      >
        {project.description}
      </p>
      <slot />
    </div>
  </div>
</div>
