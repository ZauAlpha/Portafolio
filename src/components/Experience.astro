---
import { Image } from "astro:assets";
interface Props {
  enterpriseName: string;
  description: string;
  image: ImageMetadata;
  date: string;
  location: string;
  responsibilities: string[];
  skills?: string[];
}

const props = Astro.props as Props;
---

<!-- Tarjeta de experiencia -->
<div class="bg-black p-4 sm:p-6 lg:p-8 shadow-2xl lg:w-4xl w-fit">
  <!-- Header Principal -->
  <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between">
    <!-- Información de la empresa -->
    <div class="flex flex-col sm:flex-row sm:items-start gap-4">
      <!-- Logo/Imagen -->
      <div class="flex-shrink-0 mx-auto sm:mx-0">
        <!-- Placeholder para logo - reemplaza con tu imagen -->
        <Image
          src={props.image}
          alt="Logo de la empresa"
          class="size-16 sm:size-20"
        />
      </div>
      <!-- Datos de la empresa -->
      <div class="text-center sm:text-left">
        <h1
          class="text-white font-bebas text-2xl sm:text-3xl lg:text-4xl leading-tight"
        >
          {props.enterpriseName}
        </h1>
        <p
          class="font-bebas text-base sm:text-lg lg:text-xl text-gray-400 mt-1"
        >
          {props.description}
        </p>
      </div>
    </div>
    <!-- Ubicación -->
    <div class="text-center lg:text-right">
      <h2 class="text-white font-bebas text-xl sm:text-xl lg:text-2xl">
        {props.location}
      </h2>
    </div>
  </div>
  <!-- Fecha -->
  <div
    class="lg:mt-3 text-orange-400 font-bebas text-lg sm:text-lg lg:text-xl text-center lg:text-left"
  >
    {props.date}
  </div>
  <!-- Separador visual -->
  <div
    class="w-full h-px bg-gradient-to-r from-transparent via-gray-700 to-transparent my-6 lg:my-4"
  >
  </div>
  <!-- Lista de responsabilidades -->
  <div class="space-y-4">
    <h3 class="text-white font-bebas text-lg sm:text-xl mb-4">
      RESPONSABILIDADES PRINCIPALES
    </h3>
    <div class="grid gap-2 sm:gap-2">
      {
        props.responsibilities.map((item) => (
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-2 h-2 bg-orange-400 rounded-full mt-2" />
            <p class="text-gray-300 text-sm sm:text-base leading-relaxed">
              {item}
            </p>
          </div>
        ))
      }
    </div>
  </div>
  <!-- Skills/Tecnologías (opcional) -->

  <div class="mt-8 pt-6 border-t border-gray-800">
    <div class="flex flex-wrap gap-2 justify-center lg:justify-start">
      {
        props.skills?.map((skill, index) => (
          <span
            class={`px-3 py-1 bg-gray-800 ${
              index % 2 === 0 ? "text-my-blue" : "text-my-green"
            } text-xs sm:text-sm rounded-full font-medium`}
          >
            {skill}
          </span>
        ))
      }
    </div>
  </div>
</div>
