---
interface Props {
  certificateName: string;
  description: string;
  provider: string;
  date: string;
  image?: string;
  link: string;
}
const props = Astro.props as Props;
---

<div
  class="bg-black p-4 mb-20 sm:p-6 lg:p-8 shadow-2xl lg:w-4xl w-fit border border-my-blue"
>
  <div
    class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4"
  >
    <div class="flex flex-col sm:flex-row sm:items-start gap-4">
      <!-- Logo/Imagen -->
      <div class="flex-shrink-0 mx-auto sm:mx-0">
        <img
          src={props.image}
          alt="Logo de la empresa"
          class="size-16 sm:size-20"
        />
      </div>
      <!-- Datos de la empresa -->
      <div class="text-center sm:text-left">
        <h1
          class="text-white font-bebas text-2xl sm:text-3xl lg:text-4xl leading-tight"
        >
          {props.certificateName}
        </h1>
        <p
          class="font-bebas text-base sm:text-lg lg:text-xl text-gray-400 mt-1"
        >
          {props.provider}
        </p>
        <p
          class="font-bebas text-base sm:text-lg lg:text-xl text-gray-400 mt-1"
        >
          {props.date}
        </p>
      </div>
    </div>
  </div>
  <p class="font-inter text-gray-300 text-sm sm:text-base leading-relaxed">
    {props.description}
  </p>
</div>
