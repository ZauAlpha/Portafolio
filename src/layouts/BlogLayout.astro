---
import Layout from "./Layout.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  frontmatter: CollectionEntry<"blog">["data"];
}

const { frontmatter } = Astro.props;
---

<Layout>
  <article
    class="prose prose-invert prose-lg mt-12 mx-auto px-4 py-12 max-w-3xl
  [&_h1]:text-4xl [&_h1]:mb-8 [&_h1]:font-bold [&_h1]:text-white
  [&_h2]:text-3xl [&_h2]:mt-8 [&_h2]:mb-4 [&_h2]:font-bold [&_h2]:text-white
  prose-p:text-gray-300
  prose-a:text-blue-400
  prose-a:no-underline hover:prose-a:text-blue-300
  
  prose-blockquote:border-l-4 prose-blockquote:border-blue-500
  prose-img:rounded-xl
 text-white"
  >
    <slot />
  </article>
</Layout>
